{
  "name": "tdc-guild-generator",
  "version": "0.1.0",
  "description": "Sistema completo para geração procedural de guildas de aventureiros para RPG de mesa",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "lint": "echo 'Linting será configurado nas próximas issues'",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "type-check": "vue-tsc --noEmit",
    "audit:security": "audit-ci --moderate",
    "ci:full": "npm run type-check && npm run test:coverage && npm run build"
  },
  "dependencies": {
    "@headlessui/vue": "^1.7.16",
    "@heroicons/vue": "^2.0.18",
    "pinia": "^2.1.7",
    "vue": "^3.4.0",
    "vue-router": "^4.2.5",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^20.19.22",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/test-utils": "^2.4.1",
    "@vue/tsconfig": "^0.4.0",
    "audit-ci": "^7.1.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.49.0",
    "eslint-plugin-vue": "^9.17.0",
    "jsdom": "^23.0.1",
    "postcss": "^8.4.31",
    "prettier": "^3.0.3",
    "tailwindcss": "^3.4.18",
    "typescript": "~5.9.3",
    "vite": "^7.1.11",
    "vite-plugin-pwa": "^1.1.0",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.1.1"
  },
  "keywords": [
    "rpg",
    "guild",
    "generator",
    "vue",
    "typescript",
    "pwa"
  ],
  "author": "Gabriel Soares",
  "license": "MIT"
}
